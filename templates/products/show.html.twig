{% extends 'base.html.twig' %}

{% block title product.title %}

{% block body %}

<div class="jumbotron text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
            </div>
            <div class="col-md-4">
                <h5 class="card-title">{{product.title}}</h5>
                <p class="card-text">{{product.description}}</p>
                <div class="text-danger" style="font-weight: bold; font-size: 3rem;">{{product.price}}</div>
            </div>
        </div>
    </div>
</div>

    
    

{% endblock %}